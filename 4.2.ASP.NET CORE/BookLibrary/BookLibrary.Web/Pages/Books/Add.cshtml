@page
@model BookLibrary.Web.Pages.Books.AddBookModel
@{
    ViewData["Title"] = "Add Book";
}

<h2>@ViewData["Title"]</h2>
<form method="post">
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <input asp-for="Title" class="form-control" required>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Author" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <input asp-for="Author" class="form-control" required>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <input asp-for="ImageUrl" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <textarea name="Description" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </div>
</form>

